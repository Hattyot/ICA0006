zone "{{ domain_name }}" {
  type master;
  file "/var/cache/bind/db.{{ domain_name }}";
  allow-transfer { key transfer.key; };
  allow-update { key update.key; };
};

zone "{{ ptr_domain_name }}" {
  type master;
  file "/var/cache/bind/db.{{ reverse }}";
  allow-transfer { key transfer.key; };
  allow-update { key update.key; };
};